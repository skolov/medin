{
  "name": "frontend-template",
  "version": "1.0",
  "description": "Template based on webpack, pug, stylus, es6, postcss for multi page applications",
  "scripts": {
    "build": "webpack --config webpack.production.config",
    "watch": "webpack --watch --config webpack.development.config",
    "start": "webpack-dev-server --config webpack.development.config",
    "lint": "eslint ./src"
  },
  "csscombConfig": {
    "csscomb.formatOnSave": true,
    "csscomb.preset": ".csscomb.json",
    "csscomb.preset": {
      "remove-empty-rulesets": true,
      "always-semicolon": true
    },
    "csscomb.syntaxAssociations": {
      "postcss": "scss"
    }
  },
  "author": "KSS",
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "7.0.0-beta.2",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "7.0.0-beta.2",
    "babel-preset-env": "2.0.0-beta.2",
    "bemto.pug": "^2.1.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "extract-loader": "^2.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "node-sass": "^4.8.3",
    "node-sass-glob-importer": "^5.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "postcss-loader": "^2.1.3",
    "pug-html-loader": "^1.1.5",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "svg-sprite-loader": "^3.7.3",
    "svgo": "^1.0.5",
    "svgo-loader": "^2.1.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "normalize.css": "^8.0.0",
    "popper.js": "^1.14.3"
  }
}
