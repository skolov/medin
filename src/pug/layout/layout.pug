include ../../../node_modules/bemto.pug/bemto
- set_bemto_settings({ modifier: '--' })
- const stamp = Math.round(new Date().getTime() / 1000)

include ../includes/data
include ../includes/require
include ../mixins/img
include ../mixins/icon

block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title #{title}
    include ../includes/meta.pug
    // Уникальные стили только для этой страницы - начало
    block stylesPage
    // Уникальные стили только для этой страницы - конец
    link(href=`css/app.css?stamp=${stamp}` rel='stylesheet')
    script(src=`js/icons.js?stamp=${stamp}`)
  body
    block header
      include ../../blocks/header/template
    block content
    block footer
      include ../../blocks/footer/template
    // Уникальные скрипты только для этой страницы - начало
    block scriptsPage
    // Уникальные скрипты только для этой страницы - конец
    script(src=`js/app.js?stamp=${stamp}`)

